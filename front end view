<body>
    <div class="container">
        <h2>Password Strength Checker</h2>
        <input type="password" id="password" placeholder="Enter your password">
        <br>
        <button onclick="checkStrength()">Check Strength</button>
        <div id="strength" class="strength"></div>
        <div id="feedback" class="feedback"></div>
    </div>

    <script>
        function checkStrength() {
            const password = document.getElementById("password").value;
            let strength = 0;
            let feedback = "";

            if (password.length >= 8) {
                strength++;
            } else {
                feedback += "Password should be at least 8 characters long.<br>";
            }

            if (/[A-Z]/.test(password)) {
                strength++;
            } else {
                feedback += "Add at least one uppercase letter.<br>";
            }

            if (/[a-z]/.test(password)) {
                strength++;
            } else {
                feedback += "Add at least one lowercase letter.<br>";
            }

            if (/[0-9]/.test(password)) {
                strength++;
            } else {
                feedback += "Add at least one number.<br>";
            }

            if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
                strength++;
            } else {
                feedback += "Add at least one special character.<br>";
            }

            const strengthDiv = document.getElementById("strength");
            const feedbackDiv = document.getElementById("feedback");

            if (strength === 5) {
                strengthDiv.textContent = "Strong Password ✅";
                strengthDiv.className = "strength strong";
                feedbackDiv.innerHTML = "";
            } else if (strength >= 3) {
                strengthDiv.textContent = "Moderate Password ⚠️";
                strengthDiv.className = "strength moderate";
                feedbackDiv.innerHTML = feedback;
            } else {
                strengthDiv.textContent = "Weak Password ❌";
                strengthDiv.className = "strength weak";
                feedbackDiv.innerHTML = feedback;
            }
        }
    </script>
</body>
</html>